"使用F2在安装插件的过程中命令行模式搜索插件信息"{{{
"
function! Find_addon_info(addname)
    " 从vim-addon-manager数据库中查询插件信息
    let addon_list=items(
                \ filter(copy(g:vim_addon_manager['plugin_sources'])
                \ ,'v:key =~ a:addname'))
    for [addon_key,addon_info] in addon_list
        echo '插件名称: '.addon_key
        let s:nr=get(addon_info,'vim_script_nr')
        if s:nr
            echo '  编号  : ' . s:nr
        endif
        echo '下载地址: '. get(addon_info,'url')
        let s:dt=get(addon_info,'date') 
        if s:dt
            echo '上传日期: ' .  s:dt
        endif
        echo "\n"
"        echo '详细信息' 
"        echo addon_info
    endfor
endfunction

function! LastWord()
   let cmdline = split(getcmdline())
   let @b = cmdline[-1]
   return 'call Find_addon_info("' . @b .'")'
endfunction 
cnoremap <F2> <C-\>e LastWord()<CR><CR>
"}}}
