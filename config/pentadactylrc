javascript  <<EOF
makecang = function() { 
var u=buffer.URL;
var t=buffer.title;
cangurl="http://cang.baidu.com/do/add?it="+encodeURIComponent(t)+"&iu="+encodeURIComponent(u);
dactyl.execute('tabopen '+cangurl);
}
EOF
" sc 会把当前网页存入百度搜藏
map sc -js makecang()

